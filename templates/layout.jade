doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='description', content='Daily updates about Javascript News, libraries and Weekly challenges')
      meta(name='keywords', content='Javascript News, React, ES2015, Daily, Updates, Weekly Challenges')
      meta(name='theme-color', content='#39424D')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    div.social
      a.social-btn.facebook(href='https://www.facebook.com/sharer/sharer.php?u=http%3A//Daily-Javascript.com', target='_blank')= ''
      a.social-btn.twitter(href='https://twitter.com/home?status=Follow%20%40DailyJavascript%20for%20update%20of%20new%20Javascript%20libraries%20and%20challanges%0A%23Javascript', target='_blank')= ''
      a.social-btn.reddit(href='https://www.reddit.com/submit?url=http%3A//Daily-Javascript.com', target='_blank')= ''
      a.social-btn.google(href='https://plus.google.com/share?url=http%3A//Daily-Javascript.com', target='_blank')= ''
      
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href='http://daily-javascript.com')= locals.name
            p.description= locals.description
            p.description Do you have a library you want mentioned? 
                a.mailto(href="mailto:daily-javascript@ra-ge.net") Send it in!
            div.follow
                h3 Follow Daily Javascript
                div.follow-item
                    a(href="http://cloud.feedly.com/#subscription%2Ffeed%2Fhttp%3A%2F%2Fdaily-javascript.com%2Fatom.xml", target="_blank")
                      span via Feedly
                        
                div.follow-item
                    a(href="http://twitter.com/DailyJavascript" target="_blank")
                        span via Twitter
                            
                div.follow-item
                    a(href="http://eepurl.com/bAAxM9", target="_blank")
                        span via E-Mail
                            
                div.follow-item
                    a(href="http://daily-javascript.com/atom.xml", target="_blank")
                        span via RSS
